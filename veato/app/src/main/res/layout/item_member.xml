<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/rounded_card_bg"
    android:padding="16dp"
    android:layout_marginVertical="6dp">

    <!-- Small circular Remove button -->
    <Button
        android:id="@+id/btnRemoveMember"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:text="âˆ’"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:textAllCaps="false"
        android:gravity="center"
        android:includeFontPadding="false"
        android:padding="0dp"
        android:background="@drawable/rounded_button_primary"
        android:backgroundTint="@null"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginEnd="10dp"/>

    <TextView
        android:id="@+id/tvMemberEmail"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="member@example.com"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:textStyle="bold"
        android:singleLine="true"
        android:ellipsize="end"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/btnRemoveMember"
        app:layout_constraintEnd_toStartOf="@id/btnEditMember"
        android:layout_marginStart="8dp"
        app:layout_constraintVertical_bias="0.5" />

    <TextView
        android:id="@+id/tvMemberDetails"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Position: Spouse\nAge Group: Adult"
        android:textColor="#666"
        android:textSize="13sp"
        android:lineSpacingExtra="2dp"
        android:layout_marginTop="2dp"
        app:layout_constraintTop_toBottomOf="@id/tvMemberEmail"
        app:layout_constraintStart_toStartOf="@id/tvMemberEmail"
        app:layout_constraintEnd_toEndOf="@id/tvMemberEmail"
        app:layout_constraintBottom_toBottomOf="parent" />

    <Button
        android:id="@+id/btnEditMember"
        android:layout_width="70dp"
        android:layout_height="36dp"
        android:text="Edit"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="13sp"
        android:background="@drawable/rounded_button_primary"
        android:backgroundTint="@null"
        android:paddingHorizontal="14dp"
        android:paddingVertical="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>
