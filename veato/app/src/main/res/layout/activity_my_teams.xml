<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@color/white">

    <TextView
        android:id="@+id/tvTeamsTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Teams"
        android:textSize="32sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="24dp"
        android:layout_marginTop="32dp" />

    <Button
        android:id="@+id/btnCreateTeam"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Create new team"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:background="@drawable/rounded_button_primary"
        android:backgroundTintMode="src_over"
        android:backgroundTint="@null"
        app:backgroundTint="@null"
        android:paddingHorizontal="20dp"
        android:paddingVertical="8dp"
        app:layout_constraintTop_toTopOf="@id/tvTeamsTitle"
        app:layout_constraintBottom_toBottomOf="@id/tvTeamsTitle"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="24dp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerTeams"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/tvTeamsTitle"
        app:layout_constraintBottom_toTopOf="@id/bottomNav"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        android:paddingHorizontal="16dp" />


    <LinearLayout
        android:id="@+id/bottomNav"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:background="@color/green_light"
        android:orientation="horizontal"
        android:gravity="center"
        android:paddingHorizontal="8dp"
        app:layout_constraintBottom_toBottomOf="parent">

        <Button
            android:id="@+id/btnMenuLogging"
            android:layout_width="0dp"
            android:layout_height="64dp"
            android:layout_weight="1"
            android:text="My Preferences"
            android:textSize="14sp"
            android:textAllCaps="false"
            android:background="@android:color/transparent"
            android:textColor="@color/black"
            android:paddingHorizontal="12dp"
            android:paddingVertical="8dp"/>

        <Button
            android:id="@+id/btnMyTeams"
            android:layout_width="0dp"
            android:layout_height="64dp"
            android:layout_weight="1"
            android:text="My Teams"
            android:textSize="14sp"
            android:textAllCaps="false"
            android:background="@android:color/transparent"
            android:textColor="@color/black"
            android:paddingHorizontal="12dp"
            android:paddingVertical="8dp"/>

        <Button
            android:id="@+id/btnMyProfile"
            android:layout_width="0dp"
            android:layout_height="64dp"
            android:layout_weight="1"
            android:text="My Profile"
            android:textSize="14sp"
            android:textAllCaps="false"
            android:background="@android:color/transparent"
            android:textColor="@color/black"
            android:paddingHorizontal="12dp"
            android:paddingVertical="8dp"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
